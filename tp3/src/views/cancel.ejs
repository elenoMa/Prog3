<!--
  Vista de Cancelación de Turnos
  Esta vista muestra un formulario de confirmación para cancelar un turno médico,
  mostrando los detalles del turno antes de proceder con la cancelación.
-->

<%- include('partials/header') %>

<main class="container">
  <h1>Cancelar Turno</h1>

  <form action="/cancelar" method="POST" class="mb-4">
    <div class="mb-3">
      <label for="id" class="form-label">Ingrese el ID del turno a cancelar:</label>
      <input type="number" class="form-control" id="id" name="id" required>
    </div>
    <button type="submit" class="btn btn-primary">Cancelar Turno</button>
  </form>

  <% if (message && message.trim() !== '') { %>
    <div class="alert alert-info">
      <%= message %>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>